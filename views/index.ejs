<!doctype html>
<html class="no-js" lang="en" ng-app="candidateApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Foundation | Welcome</title>
    <link rel="stylesheet" href="/css/foundation.css" />
    <link rel="stylesheet" href="/css/app.css"/>
    <link rel="stylesheet" href="/foundation-icons/foundation_icons_general/stylesheets/general_foundicons.css"/>
    <script src="js/vendor/modernizr.js"></script>
    <!--scripts for angularjs-->
    <script src="/angular/angular.js"></script>
    <script src="/js/controllers.js"></script>
</head>
<body>

<!--header portion-->
<nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
        <li class="name">
            <h1><a href="#">Candidate Portal Site</a></h1>
        </li>
        <li class="name"></li>
        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
            <li class="active"><a href="#">Create Candidate</a></li>
            <li><a href="#">Find Candidate</a></li>
            <li><a href="#">List Candidates</a></li>
        </ul>
    </section>
</nav>

<!--view portion-->
<div class="row divider"></div>

<div ng-controller="CreateCandidateCtrl">
    <div class="row">
        <h1>{{title}}</h1>
        <div class="large-12 columns panel">
            <form name="create_candidate">
                <div class="row customspacing1">
                    <div class="large-5 columns">
                        <input ng-model="name" name="name" type="text" class="forminput" placeholder="Name">
                    </div>
                    <div class="large-5 columns">
                        <input ng-model="email" name="email" type="email" class="forminput" placeholder="Email">
                    </div>
                    <div class="large-2 columns">
                        <a href="javascript:void(0)" class="button postfix" ng-click="createCandidate()">Create Candidate</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <table>
            <thead>
            <tr>
                <th width="200">ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="candidate in candidates">
                <td>{{candidate._id}}</td>
                <td>{{candidate.name}}</td>
                <td>{{candidate.email}}
                <i class="foundicon-remove icon_delete"></i>
                <i class="foundicon-edit icon_edit"></i>
                </td>
            </tr>

            </tbody>
        </table>
    </div>
</div>

<script src="js/vendor/jquery.js"></script>
<script src="js/foundation.min.js"></script>
<script>
    $(document).foundation();
</script>
</body>
</html>
